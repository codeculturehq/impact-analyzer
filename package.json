{
  "name": "@codeculture/impact-analyzer",
  "version": "0.1.0",
  "description": "Cross-repo impact analyzer for multi-repo setups - detects affected components across repositories",
  "type": "module",
  "bin": {
    "impact": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "impact-analysis",
    "monorepo",
    "multi-repo",
    "angular",
    "graphql",
    "ci-cd",
    "github-actions"
  ],
  "author": "CodeCulture",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeculturehq/impact-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/codeculturehq/impact-analyzer/issues"
  },
  "homepage": "https://github.com/codeculturehq/impact-analyzer#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@graphql-inspector/core": "^5.0.0",
    "@octokit/rest": "^21.0.0",
    "@slack/web-api": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.5.0",
    "glob": "^11.0.0",
    "madge": "^8.0.0",
    "ts-morph": "^24.0.0",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  }
}
